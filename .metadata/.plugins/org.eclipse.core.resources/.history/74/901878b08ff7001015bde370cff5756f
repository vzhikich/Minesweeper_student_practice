/* USER CODE BEGIN Header */
/**
  ******************************************************************************
  * @file           : main.c
  * @brief          : UART protocol + Minesweeper
  ******************************************************************************
  */
/* USER CODE END Header */

#include "main.h"
#include <stdlib.h>

/* Private variables ---------------------------------------------------------*/
UART_HandleTypeDef huart2;

/* USER CODE BEGIN PV */
#define RX_BUFFER_SIZE 64
#define TX_BUFFER_SIZE 256

#define CMD_MINEFIELD 'M'
#define CMD_PING      'P'

#define DIFF_EASY     'E'
#define DIFF_MEDIUM   'M'
#define DIFF_HARD     'H'

#define STATUS_OK     0x00
#define STATUS_ERR    0xFF

#define MAX_SIZE 15
#define MINE -1

uint8_t rxBuf[RX_BUFFER_SIZE];
uint8_t txBuf[TX_BUFFER_SIZE];
uint8_t rxIndex = 0;

int8_t minefield[MAX_SIZE][MAX_SIZE];
uint8_t fieldSize;
uint8_t mineCount;

/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MX_GPIO_Init(void);
static void MX_USART2_UART_Init(void);

/* USER CODE BEGIN PFP */
uint8_t XOR_Checksum(uint8_t *data, uint8_t len);
void ProcessPacket(uint8_t *packet, uint8_t len);
void HandleMinefield(uint8_t *packet);
void SendMinefieldResponse(void);
void SendError(uint8_t cmd, uint8_t err);
void GenerateMinefield(uint8_t level);
/* USER CODE END PFP */

/* USER CODE BEGIN 0 */

/* ===== XOR checksum */
uint8_t XOR_Checksum(uint8_t *data, uint8_t len)
{
    uint8_t chk = 0;
    for(uint8_t i=0;i<len;i++)
        chk ^= data[i];
    return chk;
}

/* ===== RNG / Field generation */
void RNG_Init(void){ srand(HAL_GetTick()); }

void ClearField(void)
{
    for(uint8_t i=0;i<fieldSize;i++)
        for(uint8_t j=0;j<fieldSize;j++)
            minefield[i][j]=0;
}

void PlaceMines(void)
{
    uint8_t placed=0;
    while(placed<mineCount)
    {
        uint8_t x=rand()%fieldSize;
        uint8_t y=rand()%fieldSize;
        if(minefield[x][y]!=MINE)
        {
            minefield[x][y]=MINE;
            placed++;
        }
    }
}

uint8_t CountAdjacent(uint8_t x,uint8_t y)
{
    int8_t dx,dy;
    uint8_t cnt=0;
    for(dx=-1;dx<=1;dx++)
        for(dy=-1;dy<=1;dy++)
        {
            if(dx==0 && dy==0) continue;
            int8_t nx=x+dx, ny=y+dy;
            if(nx>=0 && ny>=0 && nx<fieldSize && ny<fieldSize)
                if(minefield[nx][ny]==MINE) cnt++;
        }
    return cnt;
}

void GenerateMinefield(uint8_t level)
{
    switch(level)
    {
        case DIFF_EASY: fieldSize=5; mineCount=5; break;
        case DIFF_MEDIUM: fieldSize=10; mineCount=30; break;
        case DIFF_HARD: fieldSize=15; mineCount=50; break;
        default: fieldSize=5; mineCount=5; break;
    }
    ClearField();
    PlaceMines();
    for(uint8_t i=0;i<fieldSize;i++)
        for(uint8_t j=0;j<fieldSize;j++)
            if(minefield[i][j]!=MINE)
                minefield[i][j]=CountAdjacent(i,j);
}

/* ===== Send error packet */
void SendError(uint8_t cmd, uint8_t err)
{
    txBuf[0]=cmd;
    txBuf[1]=err;
    txBuf[2]=0;
    txBuf[3]=XOR_Checksum(txBuf,3);
    HAL_UART_Transmit(&huart2,txBuf,4,100);
}

/* ===== Send minefield packet */
void SendMinefieldResponse(void)
{
    uint16_t idx=0;
    txBuf[idx++]=CMD_MINEFIELD;
    txBuf[idx++]=STATUS_OK;
    txBuf[idx++]=fieldSize*fieldSize;

    for(uint8_t i=0;i<fieldSize;i++)
        for(uint8_t j=0;j<fieldSize;j++)
            txBuf[idx++]=(minefield[i][j]==MINE)?1:0;

    txBuf[idx]=XOR_Checksum(txBuf,idx);
    idx++;

    HAL_UART_Transmit(&huart2,txBuf,idx,100);
}

/* ===== Handle minefield request */
void HandleMinefield(uint8_t *packet)
{
    char diff = packet[2];
    switch(diff)
    {
        case DIFF_EASY: GenerateMinefield(DIFF_EASY); break;
        case DIFF_MEDIUM: GenerateMinefield(DIFF_MEDIUM); break;
        case DIFF_HARD: GenerateMinefield(DIFF_HARD); break;
        default:
            SendError(CMD_MINEFIELD,0x02);
            return;
    }
    SendMinefieldResponse();
}

/* ===== Process received packet */
void ProcessPacket(uint8_t *packet,uint8_t len)
{
    if(packet[len-1]!=XOR_Checksum(packet,len-1))
    {
        SendError(packet[0],0x01); // checksum error
        return;
    }

    switch(packet[0])
    {
        case CMD_MINEFIELD:
            HandleMinefield(packet);
            break;
        case CMD_PING:
            txBuf[0]=CMD_PING;
            txBuf[1]=STATUS_OK;
            txBuf[2]=0;
            txBuf[3]=XOR_Checksum(txBuf,3);
            HAL_UART_Transmit(&huart2,txBuf,4,100);
            break;
        default:
            SendError(packet[0],STATUS_ERR);
            break;
    }
}

/* ===== UART receive task */
void UART_Task(void)
{
    uint8_t rxByte;
    HAL_UART_Receive(&huart2,&rxByte,1,HAL_MAX_DELAY);
    rxBuf[rxIndex++]=rxByte;

    if(rxIndex>=3)
    {
        uint8_t len=rxBuf[1];
        if(rxIndex==(len+3))
        {
            ProcessPacket(rxBuf,rxIndex);
            rxIndex=0;
        }
    }

    if(rxIndex>=RX_BUFFER_SIZE) rxIndex=0;
}

/* USER CODE END 0 */

int main(void)
{
    HAL_Init();
    SystemClock_Config();
    MX_GPIO_Init();
    MX_USART2_UART_Init();

    RNG_Init();

    while(1)
    {
        UART_Task();
    }
}

/* USER CODE BEGIN 4 */
/* USER CODE END 4 */

/*System / HAL init */

void SystemClock_Config(void)
{
    RCC_OscInitTypeDef RCC_OscInitStruct = {0};
    RCC_ClkInitTypeDef RCC_ClkInitStruct = {0};

    RCC_OscInitStruct.OscillatorType = RCC_OSCILLATORTYPE_HSI;
    RCC_OscInitStruct.HSIState = RCC_HSI_ON;
    RCC_OscInitStruct.PLL.PLLState = RCC_PLL_NONE;
    HAL_RCC_OscConfig(&RCC_OscInitStruct);

    RCC_ClkInitStruct.ClockType =
        RCC_CLOCKTYPE_HCLK |
        RCC_CLOCKTYPE_SYSCLK |
        RCC_CLOCKTYPE_PCLK1;

    RCC_ClkInitStruct.SYSCLKSource = RCC_SYSCLKSOURCE_HSI;
    RCC_ClkInitStruct.AHBCLKDivider = RCC_SYSCLK_DIV1;
    RCC_ClkInitStruct.APB1CLKDivider = RCC_HCLK_DIV1;

    HAL_RCC_ClockConfig(&RCC_ClkInitStruct, FLASH_LATENCY_0);
}

static void MX_USART2_UART_Init(void)
{
    huart2.Instance = USART2;
    huart2.Init.BaudRate = 115200;
    huart2.Init.WordLength = UART_WORDLENGTH_8B;
    huart2.Init.StopBits = UART_STOPBITS_1;
    huart2.Init.Parity = UART_PARITY_NONE;
    huart2.Init.Mode = UART_MODE_TX_RX;
    huart2.Init.HwFlowCtl = UART_HWCONTROL_NONE;
    huart2.Init.OverSampling = UART_OVERSAMPLING_16;
    HAL_UART_Init(&huart2);
}

static void MX_GPIO_Init(void)
{
    __HAL_RCC_GPIOA_CLK_ENABLE();
}

void Error_Handler(void)
{
    __disable_irq();
    while (1) {

    }
}
